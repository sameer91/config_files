* {
  background-color: #00000000;
  font: "FantasqueSansMono Nerd Font 14";
}

window {
  height: 60%;
  width: 50%;
  transparency: "real";
}

mainbox {
  children: [ inputbar, listview ];
  padding: 0% 0% 0% 0%;
  background-color: @bg;
  border: 0;
  border-radius: 2;
  border-color: @bg;
}

listview {
  columns:4;
  padding: 8;
  spacing: 10;
}

element {
  border: 0;
  text-color: @fg;
  orientation: vertical;
  padding: 12 12 12 20;
  border-radius: 8;
}

element selected {
  background-color: @blue;
  border-color: @bg;
  text-color: @fg;
}

inputbar {
  children: [prompt, entry];
  padding: 4 4 4 4;
  /* change this colors to change inputbar color*/
  background-color: @blue;
  border: 0 0 0 0;
  border-color: @fg;
}

prompt {
  padding: 4 4 4 4;
  enabled: true;
}

entry {
  font: "FantasqueSansMono Nerd Font 12";
  text-color: @fg;
  padding: 8 12 8 12;
}

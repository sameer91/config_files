configuration {
    drun-display-format: "{name}";
	show-icons: true;
	icon-theme: "Papirus";
	location: 0;
	yoffset: 0;
    xoffset: 0;	
	fake-transparency: false;
	hide-scrollbar: false;
	bw: 0;
    fullscreen: false;
    show-icons: true;
	terminal: "kitty";
	sidebar-mode: false;
}

/* colors */
* {
red: #EC5250;
blue: #00ADB5;
green: #2ABB9C;
purple: #5537D2;
}

// black
* {
bg: #000000cc;
bg-sel: #00000066;
fg: #ffffff;
}

// white
